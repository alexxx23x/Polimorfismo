class Animal {
  void falar() {
    print("O animal faz um som.");
  }
}

class Cachorro extends Animal {
  @override
  void falar() {
    print("O cachorro late: Au Au!");
  }
}


class Gato extends Animal {
  @override
  void falar() {
    print("O gato mia: Miau!");
  }
}


abstract class Forma {
  double calcularArea();
}


class Quadrado extends Forma {
  double lado;

  Quadrado(this.lado);

  @override
  double calcularArea() {
    return lado * lado;
  }
}


class Circulo extends Forma {
  double raio;

  Circulo(this.raio);

  @override
  double calcularArea() {
    return 3.14 * raio * raio;
  }
}

void main() {

  List<Animal> animais = [Cachorro(), Gato()];

  for (var animal in animais) {
    animal.falar(); 
  }

 
  List<Forma> formas = [Quadrado(4), Circulo(3)];

  for (var forma in formas) {
    print("√Årea: ${forma.calcularArea()}");
  }
}
